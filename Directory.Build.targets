<Project>
  <PropertyGroup>
    <NightlyTag>nightly</NightlyTag>
 </PropertyGroup>

  <Target Name="SetVersions" BeforeTargets="GetAssemblyVersion" DependsOnTargets="GitInfo;GitVersion" Returns="$(Version)">
    <PropertyGroup>
      <GitDefaultBranch>main</GitDefaultBranch>
      <GitIgnoreBranchVersion>true</GitIgnoreBranchVersion>
      <GitIgnoreTagVersion>true</GitIgnoreTagVersion>
    </PropertyGroup>

       <ItemGroup>
    <Message Importance="high" Text="Version Info:
  AssemblyVersion:        $(AssemblyVersion)
  FileVersion:            $(FileVersion)
  InformationalVersion:   $(InformationalVersion)
  PackageVersion:         $(PackageVersion)
  Version:        $(Version)
  VersionPrefix:  $(VersionPrefix)
  VersionSuffix:  $(VersionSuffix)
"/>
   </ItemGroup>
    <PropertyGroup>
      <PackageVersion>$(GitBaseVersionMajor).$(GitBaseVersionMinor).$(GitBaseVersionPatch)</PackageVersion>
      <!--<PackageVersion>0.0.1</PackageVersion>-->
    </PropertyGroup>
    <ItemGroup>
      <Message Importance="High" Text="Version Info:
  GitSemVerMajor:        $(GitSemVerMajor)
  GitSemVerMinor:        $(GitSemVerMinor)
  GitSemVerPatch:        $(GitSemVerPatch)
  GitSemVerDashLabel:    $(GitSemVerDashLabel)
"/>
    </ItemGroup>
 </Target>

 <Target Name="VersionInfoReport" DependsOnTargets="SetVersions">
   <ItemGroup>
    <Message Importance="High" Text="Version Info:
  GitSemVerMajor:        $(GitSemVerMajor)
  GitSemVerMinor:        $(GitSemVerMinor)
  GitSemVerPatch:        $(GitSemVerPatch)
  GitSemVerDashLabel:    $(GitSemVerDashLabel)
"/>
   </ItemGroup>
  </Target>
</Project>